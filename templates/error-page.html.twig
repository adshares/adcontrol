{% extends 'base.html.twig' %}
        {% block stylesheets %}
            <style>
                body {
                    margin: 0;
                    background-color: lightgray;
                    font-family: sans-serif;
                }

                .error-page-container {
                  display: flex;
                  justify-content: center;
                  padding: 100px 100px;
                }

                .alert {
                  display: flex;
                  align-items: center;
                  border-radius: 8px;
                  background-color: rgb(22, 11, 11);
                  padding: 8px 16px;
                  color: rgb(244, 199, 199);
                  }

                  .alert-icon--container {
                    color: rgb(244, 67, 54);
                    margin-right: 16px;
                    padding: 8px 0;
                    display: flex;
                    font-size: 24px;
                  }

                  .alert-icon--svg {
                    width: 2em;
                    height: 2em;
                    fill: currentColor;
                  }

                  .alert-message {
                    margin: 0;
                    padding: 8px 0;
                    min-width: 0;
                  }

            </style>
        {% endblock %}
{% block content %}
<div class="error-page-container">
    <div class="alert">
        <div class="alert-icon--container">
            <svg class="alert-icon--svg" focusable="false" aria-hidden="true" viewBox="0 0 24 24" data-testid="ErrorOutlineIcon">
                <path d="M11 15h2v2h-2zm0-8h2v6h-2zm.99-5C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"></path>
            </svg>
        </div>
        <p class="alert-message">{{ message|nl2br }}</p>
    </div>
</div>
{% endblock %}
