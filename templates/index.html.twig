{% extends 'base.html.twig' %}

{% block stylesheets %}
    {% if
        state is constant('App\\Entity\\Enum\\AppStateEnum::ADSERVER_ACCOUNT_CREATED')
        or
        state is constant('App\\Entity\\Enum\\AppStateEnum::MIGRATION_COMPLETED')
    %}
        {# installation #}
        {{ encore_entry_link_tags('js/installer') }}
    {% elseif state is constant('App\\Entity\\Enum\\AppStateEnum::INSTALLATION_COMPLETED') %}
        {# installation #}
        {{ encore_entry_link_tags('js/app') }}
    {% else %}
        {# installation #}
        {{ encore_entry_link_tags('js/accountCreator') }}
    {% endif %}

{% endblock %}

{% block javascripts %}
    {% if
        state is constant('App\\Entity\\Enum\\AppStateEnum::ADSERVER_ACCOUNT_CREATED')
        or
        state is constant('App\\Entity\\Enum\\AppStateEnum::MIGRATION_COMPLETED')
    %}
        {# installation #}
        {{ encore_entry_script_tags('js/installer') }}
    {% elseif state is constant('App\\Entity\\Enum\\AppStateEnum::INSTALLATION_COMPLETED') %}
        {# configuration #}
        {{ encore_entry_script_tags('js/app') }}
    {% else %}
        {# account creation #}
        {{ encore_entry_script_tags('js/accountCreator') }}
    {% endif %}
{% endblock %}

{% block content %}
    <div id="root"></div>
{% endblock %}
